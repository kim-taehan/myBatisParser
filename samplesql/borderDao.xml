	<select id="selectPostIn" resultType="domain.blog.Post">
		select * from tbl_board
		<trim prefix="where" suffix=";" prefixOverrides=" AND | OR" suffixOverrides = "니미럴">
			1=1
			<if test="title != null">
			and title = #{title}
			</if>
			<if test="content != null">
				AND content = #{content}
			</if>
			<if test="writer != null">
				OR writer = #{writer} 니미럴
			</if>
		</trim>
	</select>

